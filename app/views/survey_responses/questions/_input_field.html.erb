<div class="form-group">
  <%= f.label( question.field, class: 'control-label caceo-form-label' ) do %>
    <%= question.label %>
    <span class="info">
      <a href= <%= "##{question.field}_modal" %> data-toggle='modal'>(what's this?)</a>
    </span>
  <% end %>

  <div class="caceo-form-input input-group survey-question">
    <% if question.na_able? %>
      <label class="input-group-addon">
        <%= f.check_box "#{question.field}_na", class: "na-checkbox" %> N/A
      </label>
    <% end %>

    <% if question.boolean? %>
      <%= f.input_field question.field, as: :boolean, boolean_style: :inline, 
        class: "form-control value-field" %>
    <% elsif question.multi_select? %>
      <div class="caceo_checkbox_group">
        <% options = "#{question.survey_id}::#{question.field.upcase}".constantize %>
        <%= f.input_field "#{question.field}_multi_select".to_sym, collection: options, as: :check_boxes %>
      </div>
    <% # elsif question.text? %>
    <% else %>
      <%= f.input_field question.field, class: "form-control value-field" %>
    <% end %>
  </div>
</div>
