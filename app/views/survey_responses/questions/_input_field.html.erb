<div class="form-group">
  <%= f.label( question.field, class: 'control-label caceo-form-label' ) do %>
    <%= question.label %>
    <span class="info">
      <a href= <%= "##{question.field}_modal" %> data-toggle='modal'>(what's this?)</a>
    </span>
  <% end %>

  <div class="caceo-form-input input-group survey-question">
    <% if question.na_able? %>
      <label class="input-group-addon">
        <%= f.check_box "#{question.field}_na", class: "na-checkbox" %> N/A
      </label>
      <%= f.input_field "#{question.field}_value", class: "form-control value-field" %>
    <% else %>
      <%= f.input_field question.field, class: "form-control" %>
    <% end %>
  </div>
</div>
