
    <div class="show_item_title_main">
      <%= "Total Salaries - Tasks: #{survey_presenter.as_dollars survey.salary_total}" %>
    </div>

    <% survey.salary_items.each do | item | %>
      <div class="show_item_title_sub">
        <%= "#{ format_survey_label item.label}: #{ survey_presenter.as_dollars survey.response_for( item ) }" %>
      </div>
    <% end %>
    
    <div class="show_item_title_main">
      <%= "Total Salaries - Types of Staff and Pay: #{survey_presenter.as_dollars survey.salary_estimate_total}" %>
    </div>    

    <% survey.salary_estimate_items.each do | item | %>
      <div class="show_item_title_sub">
        <%= "#{ format_survey_label item.label}: #{ survey_presenter.as_dollars( survey.response_for( item ) ) }" %>
      </div>
    <% end %>

    <div class="show_item_title_main">
      <%= "Total Benefits - in Dollars: #{survey_presenter.as_dollars survey.benefits_dollar_total}" %>
    </div>
    
    <% survey.benefits_dollar_items.each do | item | %>
      <div class="show_item_title_sub">
        <%= "#{ format_survey_label item.label}: #{ survey_presenter.as_dollars( survey.response_for( item ) ) }" %>
      </div>
    <% end %>

    <% if survey.benefits_percent? %>
      <div class="show_item_title_main">
        <%= "Benefits - in Percent" %>
      </div>
      
      <% survey.benefits_percent_items.each do | item | %>
        <div class="show_item_title_sub">
          <%= "#{ format_survey_label item.label}: #{ survey_presenter.as_percent survey.response_for( item ) }" %>
        </div>
      <% end %>
    <% end %>

    <div class="show_item_title_main">
      <%= "Total Hours Worked: #{ number_with_delimiter survey.hours_total }" %>
    </div>

    <% survey.hours_items.each do | item | %>
      <div class="show_item_title_sub">
        <%= "#{ format_survey_label item.label}: #{ number_with_delimiter survey.response_for( item ) }" %>
      </div>
    <% end %>
    
    <% survey.comment_items.each do | q | %>
      <div class="show_item_title">
        <%= format_survey_label q.label %>
      </div>
      <div class="show_item">
        <%= survey.response_for( q ) %>
      </div>
    <% end %>

  <div class="show_item_title_total">Total Salaries Including Benefits</div>

  <div class="show_item_total">
    <%= "#{survey_presenter.as_dollars survey.salary_estimate_benefits_total }" %>
  </div>