
<h2 class="myh2">Security Question</h2>
<p class="myh2-sub"><%= link_to "Forgot your security question? Click to reset over email.", new_password_reset_path %></p>

 <%= simple_form_for(:user, :url => {:controller => 'users', :action => 'reset_password'}) do |f| %>


    <%= f.input  :username_or_email,  label: "Please Enter Your Username or Email Address",  :label_html => { :class => "form_item" } %>

     <%= f.input :security_question , :as => :select,
               :label => "Select Your Security Challenge Question", :include_blank => false,
               :collection => [["First Pet's Name", 1], ["High School Mascot", 2], ["Mother's Maiden Name", 3]], :label_html => { :class => "form_item" } %>

    <%= f.input  :security_answer,  label: "Please Enter the Answer to Your Security Question",  :label_html => { :class => "form_item" } %>


 <div class="form-actions">
    <%= f.submit :Submit %>
</div>
  <% end %>
